<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.parij.myschoolcomm.admindashboard">

    />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="59dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textemergency"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorAccent"
                android:text="Emergency"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@null"
                app:srcCompat="@drawable/emergency" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textauthorized"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/Brown"
                android:text="Authorized Person"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/authorisedperson"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@null"
                app:srcCompat="@drawable/authorized" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textparent"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/Orange"
                android:text="Parent Profile"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/parentsprofile"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@null"
                app:srcCompat="@drawable/parents" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="363dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textchild"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/light_blue"
                android:text="Child Profile"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/childprofile"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@null"
                app:srcCompat="@drawable/child" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textsyllabus"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/Pink"
                android:text="Syllabus Coverage"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/homeclassreport"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@null"
                app:srcCompat="@drawable/syllabus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textannouncements"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/dark_green"
                android:text="Announcements"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/Announcements"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@null"
                app:srcCompat="@drawable/announcement" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"

            android:orientation="vertical">

            <TextView
                android:id="@+id/texthomework"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/Yellow"
                android:text="Home-Work"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/Homework"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@null"
                app:srcCompat="@drawable/homework" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textspoken"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/Green"
                android:text="Spoken English
"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@null"
                app:srcCompat="@drawable/theme1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textrequest"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/colorPrimary"
                android:text="Request Leave"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/reqforLeave"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@null"
                app:srcCompat="@drawable/requestleave" />
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.7"
        android:clickable="true"
        app:srcCompat="@drawable/add" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.7"
        android:background="@color/colorPrimary"
        android:text="LOG OUT"
        android:textColor="@color/White" />

</LinearLayout>
